<%- include('./layouts/header') %>
    <div class="form_container">
        <!-- Login Form -->
        <div class="form login_form">
            <form id="loginForm" action="/auth/resetPassword/<%= token %>" method="POST">
                <h2>Enter Password</h2>
                <div class="input_box">
                    <input type="password" name="newPassword" placeholder="Enter your code" required />
                    <i class="uil uil-lock-alt"></i>
                </div>

                <h2>Confirm Password</h2>
                <div class="input_box">
                    <input type="password" name="confirm_password" placeholder="Enter your code" required />
                    <i class="uil uil-lock-alt"></i>
                </div>
                <button type="submit" class="button">Reset Password</button>
                <div id="error-message" class="error-message" style="color: red; margin-top: 10px; display: none;"></div>
            </form>
        </div>
    </div>
<%- include('./layouts/footer') %>